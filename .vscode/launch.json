    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug local train",
            "type": "debugpy",
            "request": "launch",
            "program": "src/train.py",
            "console": "integratedTerminal",
            "args": [
                "--epochs",
                "1",
                "--rounds",
                "2",
                "--samples-per-image",
                "5"
