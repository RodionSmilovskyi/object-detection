        {
            "name": "Debug aws train",
            "type": "debugpy",
            "request": "launch",
            "program": "aws-train.py",
            "console": "integratedTerminal",
            "args": [
                "--prefix",
                "object-detection",
                "--job-name",
                "ssdlite-640-640"
            ]
        }
    ]
